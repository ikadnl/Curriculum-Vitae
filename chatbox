წერილის გამოჩენა (გასასწორებელია)

function send() {
  var text = document.getElementById("message").value;
  var oldtext = document.getElementById("int-msg");
  var newtext = document.getElementById("int-msg");
  newtext.innerHTML = text;
  var msgbox = document.getElementById("interviewer");
  var newmsgbox = msgbox.cloneNode(true);
  var element = document.getElementById("dialogue");
  document.getElementById("dialogue").appendChild(newmsgbox);
  element.scrollTop = element.scrollHeight;
  newtext.innerHTML = oldtext;
}

ფლეისჰოლდერის ოფციები

function dissapearPlaceholder(input) {
  input.placeholder = "";
  input.style.border = "solid darkcyan 5px";
}

function reappearPlaceholder(input) {
  input.placeholder = "Ask me anything about me...";
  input.style.border = "solid grey 1px";
}




